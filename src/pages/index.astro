---
import Layout from "../layouts/Layout.astro";
import ImageCard from "../components/ImageCard.astro";
import userData from "../info/data.json";
import "../styles/index.css";
import "../styles/indexResponsive.css";
---

<Layout title="Welcome to Astro.">
    <main>
	    <h1>Bienvenido a la Orla de <span class="text-gradient">DAW</span></h1>
        <div class="image-container">
            {
                userData.map(({ name, image_path, description, contact_information }) => (
                    <ImageCard title={name} body={description} image_path={image_path}, href="" />
                ))
            }
        </div>
    </main>
</Layout>

