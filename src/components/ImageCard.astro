---
interface Props {
    title: string;
    body: string;
    href: string;
	image_path : string;
}

const { href, title, body,image_path } = Astro.props;
---

<div class="link-card">
    <a href={href}>
        <h2>
            {title}
            <span></span>
        </h2>

        <hr />
		<div class="img-fitter">

			<img src={image_path} alt="">
		</div>
        {body}
    </a>
</div>
<style>

.link-card {
        list-style: none;
        width: 250px;
        height: 350px;
        display: flex;
        padding: 1px;
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

	.link-card img{
	
		width: 80%;
		height: auto;
		margin-left: 10px;
		margin-right: auto;
		max-height: 65%;
	}


    .link-card > a {
        width: 100%;
        text-decoration: none;
		text-align: center;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
    }
    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }
    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }


    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent-light));
    }
</style>
